{% extends 'base.html.twig' %}

{% block title %}¡Inicia sesión!{% endblock %}

{% block body %}
<!doctype html>

<html lang="es">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="fonts/icomoon/style.css">
    <link rel="stylesheet" href="css/owl.carousel.min.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!-- Style -->
    <link rel="stylesheet" href="css/styleLogin.css">
    <link rel="stylesheet" href="css/style.css">

  </head>
  <body>
  <div class="header">
            <div class="container-fluid">
               <div class="row">
                  <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                     <div class="full">
                    <div class="center-desk">
                           
                        </div>
                     </div>
                  </div>
                 <div class="col-xl-7 col-lg-7 col-md-9 col-sm-9">
                  <nav class="navigation navbar navbar-expand-md navbar-dark">
                     <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                           <span class="navbar-toggler-icon"></span>
                     </button>
                        <div class="collapse navbar-collapse" id="navbarsExample04">
                        <ul class="navbar-nav mr-auto">
                           <li class="nav-item active">
                             <a class="nav-link" href="{{ path('app_index') }}">Inicio</a>

                           </li>
                           {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                 {% if is_granted('ROLE_ADMIN') %}
                                    <li class="nav-item">
                                       <a class="nav-link" href="{{ path('admin') }}">Administración</a>
                                    </li>
                                 {% endif %}
                                 <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                                 </li>
                           {% else %}
                                 <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_login') }}">Iniciar sesión</a>
                                 </li>
                           {% endif %}
                           <li class="nav-item">
                                 <a class="nav-link" href="we-do.html">Tipos De Activiades</a>
                           </li>
                           <li class="nav-item">
                                 <a class="nav-link" href="pricing.html">Pricing</a>
                           </li>
                          
                        </ul>
                     </div>

                     </nav>
                  </div>

                  <div class="col-md-2">
                     <ul class="social_icon">
                       
                     </ul>
                  </div>
               </div>
            </div>
         </div>
      </header>
    <div class="content">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <img src="images/undraw_remotely_2j6y.svg" alt="Image" class="img-fluid">
          </div>
          <div class="col-md-6 contents">
            <div class="row justify-content-center">
              <div class="col-md-8">
                <div class="mb-4">
                  <h3>Inicia sesión</h3>
                  <p class="mb-4">Inicia sesión para poder ver el contenido exclusivo de la página web.</p>
                </div>
                
                <form action="#" method="post">

                  {% if error %}
                      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                  {% endif %}

                  {% if app.user %}
                      <div class="mb-3">
                          Estás conectado como {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Cerrar sesión</a>
                      </div>
                  {% endif %}

                  <div class="form-group first">
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" placeholder="Email" autocomplete="email" required autofocus>
                    
                  </div>

                  <div class="form-group last mb-4">
                    <input type="password" name="_password" id="password" class="form-control" placeholder="Contraseña" autocomplete="current-password" required>
                   
                  </div>

                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                  <button class="btn btn-lg btn-primary" type="submit">
                      Iniciar sesión
                  </button>

                </form>
              </div>
            </div>
            
          </div>
          
        </div>
      </div>
    </div>

    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
  </body>
</html>
{% endblock %}
