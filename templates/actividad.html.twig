<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mi Tabla</title>
 <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</head>
<body>
  <table id="myTable" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>John Doe</td>
        <td>johndoe@example.com</td>
        <td>Active</td>
        <td><button class="btn btn-sm btn-primary" id="toggle-btn-1">Toggle</button></td>
      </tr>
      <tr>
        <td>Jane Doe</td>
        <td>janedoe@example.com</td>
        <td>Inactive</td>
        <td><button class="btn btn-sm btn-primary" id="toggle-btn-2">Toggle</button></td>
      </tr>
    </tbody>
  </table>

  <script>
    $(document).ready(function() {
      $('#myTable').DataTable({
        "paging": false,
        "ordering": false,
        "info": false,
        "searching": false
      });

      $('#myTable tbody tr').on('click', 'button', function() {
        var tr = $(this).closest('tr');
        var status = $(this).text();
        if (status === 'Toggle') {
          $(this).text('Active');
          tr.find('td:eq(2)').text('Active');
        } else {
          $(this).text('Toggle');
          tr.find('td:eq(2)').text('Inactive');
        }
      });
    });
  </script>
</body>
</html>
