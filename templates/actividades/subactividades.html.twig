<!DOCTYPE html>
<html lang="es">
<head>
  <!-- Basic meta tags -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <!-- Site meta tags -->
  <title>{% block title %}IES Las Fuentezuelas{% endblock %}</title>
  <meta name="keywords" content="">
  <meta name="description" content="">
  <meta name="author" content="">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
  <link rel="stylesheet" href="{{ asset('css/style.css') }}">
  <!-- Favicon -->
  <link rel="icon" href="{{ asset('images/fevicon.png') }}" type="image/gif" />
  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
  <!-- Fancybox -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
  <!-- MDBootstrap CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css" />
  {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/listaActividad.css') }}">
  {% endblock %}
</head>
<body>
  {% include 'header.html.twig' %}
  
  {% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1>Detalle de Actividad</h1>
                <div class="card">
                    <div class="card-body">

                        <p class="card-text">
                            Fecha Inicio: {{ actividad.getFechaHoraIni()|date("d-m-Y H:i:s") }}<br>
                            Fecha Fin: {{ actividad.getFechaHoraFin()|date("d-m-Y H:i:s") }}
                        </p>
                       
                        {% if actividad.getDescripcion() %}
                            <p class="card-text">Descripci√≥n: {{ actividad.getDescripcion() }}</p>
                        {% endif %}
                        {% if actividad.getEvento() %}
                            <p class="card-text">Evento: {{ actividad.getEvento().getTitulo() }}</p>
                        {% endif %}

                        
                    </div>
                </div>

                {% if subactividades is not empty %}
                    <div class="mt-4">
                        <h2>Subactividades</h2>
                        <div class="list-group">
                            {% for subactividad in subactividades %}
                                <a href="{{ path('detalle_actividad', {'id': subactividad.getId()}) }}" class="list-group-item list-group-item-action">
                                    {{ subactividad.getTitulo() }}
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                {% else %}
                    <div class="mt-4">
                        <p>No se encontraron subactividades para esta actividad.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
  {% endblock %}
  
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>
  <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</body>
</html>
