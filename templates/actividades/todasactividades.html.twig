  <!-- MDBootstrap CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css" />
  {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/timeline.css') }}">
  {% endblock %}
  <!-- Material Design Iconic Font CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css" integrity="sha256-3sPp8BkKUE7QyPSl6VfBByBroQbKxKG7tsusY2mhbVY=" crossorigin="anonymous" />
</head>
<body>
    {% include 'header.html.twig' %}

{% set total_actividades = actividades|length %}
                        {% set total_detalleactividades = detalleactividades|length %}
                        {% set total_total = total_actividades + total_detalleactividades %}
                        <p class="blockquote text-center">Actividades totales : {{ total_total }}</p>
                        {% for actividad in actividades %}
                <div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="">
                <div class="">
                    <div id="content">
                        <ul class="timeline">
                            <li class="event" data-date={{ actividad.getFechaHoraIni()|date('d-m-Y H:i:s') }}>
                                <h3>{{ actividad.descripcion }}</h3>
                                <p>Esta es la informacion sobre esta actividad. Puede que la actividad ya haya finalizado.</p>
                                <p>Fecha de finalizacion: {{ actividad.getFechaHoraFin()|date('Y-m-d H:i:s') }}</p>
                                <p>{{ actividad.id }}</p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endfor %}
    <!-- jQuery and Bootstrap Bundle with Popper.js -->
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
</body>
</html>
